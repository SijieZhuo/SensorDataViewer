<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:stressProject"
        xmlns:rtchart="http://mindfusion.eu/charting/wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
    x:Class="stressProject.MainWindow"
    >


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="25" Margin="0,395,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="793" RenderTransformOrigin="0.493,0.363"/>
        <Button x:Name="BTSearchBtn" Content="Bluetooth" HorizontalAlignment="Left" Margin="32,30,0,0" VerticalAlignment="Top" Width="75" Click="BTSearchBtn_Click"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="32,55,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="shimmerBtn" Content="Connect" HorizontalAlignment="Left" Margin="32,124,0,0" VerticalAlignment="Top" Width="75" Click="Shimmer_Click"/>
        <Label x:Name="label" Content="Shimmer Device :" HorizontalAlignment="Left" Margin="32,93,0,0" VerticalAlignment="Top" Width="120"/>
        <TabControl x:Name="tabControl" Margin="165,10,10.333,30.667">
            <TabItem Header="Shimmer">
                <Grid Background="#FFE5E5E5">
                    <ScrollViewer HorizontalAlignment="Left" Height="352" VerticalAlignment="Top" Width="612" RenderTransformOrigin="-0.223,0.262">
                        <StackPanel x:Name="sp" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="592" RenderTransformOrigin="0.485,0.524"/>
                    </ScrollViewer>
                </Grid>


            </TabItem>
            <TabItem Header="Phone">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

        <Button x:Name="recordBtn" Content="record" HorizontalAlignment="Left" Margin="32,175,0,0" VerticalAlignment="Top" Width="75" Click="recordBtn_Click"/>
        <Button x:Name="phoneBTBtn" Content="phone" HorizontalAlignment="Left" Height="23" Margin="32,225,0,0" VerticalAlignment="Top" Width="89" Click="phoneBTBtn_Click"/>
    </Grid>

</Window>
